{
  "manifest_version": 2,
  "name": "Substitute",
  "description": "Replaces any text with a text you provide to enhance your browsing experience.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["jquery.js", "jquery.replacetext.js", "replace.js"]
    }
  ]
}
